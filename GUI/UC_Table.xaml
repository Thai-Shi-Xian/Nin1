<UserControl x:Class="GUI.UC_Table"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:GUI"
			 mc:Ignorable="d" 
			 d:DesignHeight="25" d:DesignWidth="100">
	<Grid Background="#F7F7F7">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>
		<Grid.Resources>
			<local:C_UC_Table x:Key="Representation"/>
		</Grid.Resources>
		<Grid.DataContext>
			<Binding Source="{StaticResource Representation}"/>
		</Grid.DataContext>
		<ComboBox x:Name="CB_TableSel" Grid.Column="0" Margin="2, 2, 1, 2" ItemsSource="{Binding Path = Table, Mode = OneWay}"/>
		<TextBox x:Name="TB_Poz" Grid.Column="1" Margin="1, 2, 2, 2" Text="{Binding Path=Pozition, Mode=OneWayToSource}"/>
	</Grid>
</UserControl>